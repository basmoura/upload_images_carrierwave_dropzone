<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <% @post.images.each do |img| %>
    <%= image_tag img.image_source.url, class: "img-thumb", width: "120", height: "120" if img.image_source %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
